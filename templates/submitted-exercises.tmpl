<!DOCTYPE html>
<html>

<head>
	<!--Styles-->
	<link rel="stylesheet" href="{{ path }}/css/dashboard.css" />
	<link rel="stylesheet" href="{{ path }}/css/default.css" />
	<!--Scripts-->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	<script type="text/javascript" src ="{{ path }}/js/signin.js"></script>
	<script src="https://tinymce.cachefly.net/4.2/tinymce.min.js"></script>
	<script>tinymce.init({selector:'textarea'});</script>
	<script type="text/javascript" src ="{{ path }}/js/tab.js"></script>
	<!--Fonts-->
	<link href='http://fonts.googleapis.com/css?family=Roboto:400,300italic,700&amp;subset=latin,latin-ext' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
	<!--Templates-->
	<meta charset="UTF-8">
	<title>Submitted Exercises</title>
</head>

<body>
	<!--pagina curenta-->
	<div class="current-page">
		{{ currentPage }}
	</div>

		<!--Sidebar-->
	<div class="side-navigation">
		{% include 'partial-templates/sidebar.tmpl' %}
	</div>

	<!--Content-->
	<div class="topAccount">
		{% include 'partial-templates/top-account-section.tmpl' %}
	</div>

	<!--Container-->


	{% set number = 0 %}
	{% for exercise in exercises %}
		{% set number = number +1 %}
	<div class="courseList">

		<div class="alignment">
			<h2 class="category">Submitted Exercises for {{ exercise.course.label }} - {{ exercise.course.title }}</h2>
		</div>

		<div class="existingExercise">

				<div class="exercise-details submitted  exercise-details header">

					<div class="course-exercise-name">
						<div class="alignment">
							<h3 class="newUserName">Exercise {{ number }}</h3>
						</div>

						<div class="buttonAlignment">
							<a href="" class="buttonOpen links-a">Open</a>
						</div>

					</div>

					<div class="course-exercise-content">
						<span class="courseDetail alignment">{{ exercise.description | raw}}</span>
					</div>

				</div>

				{% if solutionsMessage != ""%}
					<div class="solutions-container">
						<div class="otherMessage">
							{{ solutionsMessage }}
						</div>
					</div>
				{% else %}
				<div class="solutions-container">
					{% for solution in exercise.solutions %}

					<div class="exercise-responses">

						<div class="exercise-details header">
							<div class="alignment">
								<h3 class="newUserName"><a href="" class="links-a">Solution from {{ solution.userName }}</a></h3>
							</div>
							<div class="buttonAlignment">
								<a href="" class="buttonOpen links-a">Open</a>
							</div>
						</div>

						<div class="course-solution-content">
							<span class="courseDetail alignment solution-content">{{ solution.description | raw }}</span>
						</div>

					</div>
					{% endfor %}
					</div>
				{% endif %}
		</div>

	</div>
	{% endfor %}

		<!--Footer-->
	<div class="footer">
		{% include 'partial-templates/footer.tmpl' %}
	</div>

	</body>
</html>
