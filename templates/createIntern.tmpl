<!DOCTYPE html>
<html>

<head>
	<!--Styles-->
	<link rel="stylesheet" href="css/dashboard.css" />
	<link rel="stylesheet" href="css/default.css" />
	<!--Scripts-->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	<script type="text/javascript" src="js/signin.js"></script>
	<!--Fonts-->
	<link href='http://fonts.googleapis.com/css?family=Roboto:400,700&amp;subset=latin,latin-ext' rel='stylesheet' type='text/css'>
	<!--Templates-->
	<meta charset="UTF-8">
	<title>Create Intern</title>
</head>

<body>

	<!--Sidebar-->
	<div class="side-navigation">
		{% include 'sidebar.tmpl' %}
	</div>

	<!--Content-->
	<div class="topAccount">
		{% include 'topAccountSection.tmpl' %}
	</div>


	<div class="containerForm">

		<h1 class="mainHeaderDashboard">Create Intern</h1>

		<div class="errorMessage">
			{{ errorMessage }}
		</div>

		<div class="successMessage">
			{{ successMessage }}
		</div>

		<form method="POST" action="createIntern.php">
			<div class="formInput">
				<input class="formControl" id="firstName" name="firstName" type="text" placeholder="First Name">
				<span class="formBar"></span>
				<label for="firstName">First Name</label>
			</div>
			<div class="checkFirstName"></div>

			<div class="formInput">
				<input class="formControl" id="lastName" type="text" name="lastName" placeholder="Last Name">
				<span class="formBar"></span>
				<label for="lastName">Last Name</label>
			</div>
			<div class="checkLastName"></div>

			<div class="formInput">
				<input class="formControl" id="username" type="text" name="username" placeholder="Username">
				<span class="formBar"></span>
				<label for="username">Username</label>
			</div>
			<div class="checkUsername"></div>

			<div class="formInput">
				<input class="formControl" id="email" type="email" name="emailAdress" placeholder="Email Adress">
				<span class="formBar"></span>
				<label for="email">Email Adress</label>
			</div>
			<div class="validEmail"></div>

			<div class="formInput">
				<input class="formControl" id="password" type="password" name="password" placeholder="Password">
				<span class="formBar"></span>
				<label for="password">Password</label>
			</div>

			<div class="formInput">
				<input class="formControl" id="retypePassword" type="password" name="retypePassword" placeholder="Retype Password">
				<span class="formBar"></span>
				<label for="retypePassword">Retype Password</label>
			</div>
			<div class="passwordsStatus"></div>

			<div class="imageAlignment">
				<img class="profile-image" src="http://placehold.it/100x100" alt="Intern avatar" id="output">
			</div>
			<div class="buttonAlign">
				<input class="button-add-form" type="file" accept="image/*" name="fileToUpload" id="buttonAddImage" onchange="loadFile(event)" >
			</div>

			<button type="submit" id="buttonSubmitMentor" class="buttonSubmitUser" >Submit </button>

		</form>
	</div>


	<!--Footer-->
	<div class="footer">
		{% include 'footer.tmpl' %}
	</div>
	<script>
		var loadFile = function(event) {
			var reader = new FileReader();
			reader.onload = function(){
				var output = document.getElementById('output');
				output.src = reader.result;
			};
			reader.readAsDataURL(event.target.files[0]);
		};
	</script>

</body>

</html>