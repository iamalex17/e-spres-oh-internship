	<!--pagina curenta-->
	<div class="current-page">
		{{ currentPage }}
	</div>

	<div class="deleteMessage">
		{{ deleteMessage }}
	</div>

	<div class="mentorList">
		<div class="alignment">
			<h2 class="category">Mentors</h2>
			<h4 class="list">List of mentors</h4>
		</div>

		<div class="buttonAlignment">
			<a href="admin/create-mentor.php" id="buttonNewMentor" class="button-add-form">
				<i class="fa fa-plus"></i >New Mentor
			</a>
		</div>
		<div class="existing-user-container">
			<div class="noUserMessage">
				{{ mentorMessage }}
			</div>
			{% for user in mentor %}
			{% if user.status == 1 %}
			<div class="existingMentor">
				<div class="alignment">
						<h3 class="newUserName">{{ user.first_name }} {{ user.last_name }}</h3>
						<h5 class="emailAddress">{{ user.email }}</h5>
				</div>

				<div class="buttonAlignment">
					<button value = "{{ user.id }}" class="buttonDelete"><i class="fa fa-times"></i></button>
				</div>
			</div>
			{% endif %}
			{% endfor %}
		</div>

	</div>

	<div class="internList">
		<div class="alignment">
			<h2 class="category">Interns</h2>
			<h4 class="list">List of interns</h4>
		</div>

		<div class="buttonAlignment">
			<a href="admin/create-intern.php" id="buttonNewIntern" class="button-add-form">
				<i class="fa fa-plus"></i>New Intern
			</a>
		</div>


		<div class="existing-user-container">
			<div class="noUserMessage">
				{{ internMessage }}
			</div>
			{% for user in intern %}
			{% if user.status == 1 %}
			<div class="existingIntern">
				<div class="alignment">
						<h3 class="newUserName">{{ user.first_name }} {{ user.last_name }}</h3>
						<h5 class="emailAddress">{{ user.email }}</h5>
				</div>

				<div class="buttonAlignment">
					<form data-remodal-target="modal" action="dashboard.php" method="POST" class="test">
						<button name="delete_button" value="{{ user.id }}" class="buttonDelete" >
						<i class="fa fa-times"></i></button>
					</form>
				</div>
			</div>
			{% endif %}
			{% endfor %}
		</div>

		<div class="modal-container">
			<div class="remodal">
				<button type="reset" class="remodal-cancel button-x float-right">X</button>
				<h1>Delete Mentor</h1>
				<p>
					Are you sure you want to delete this user?
				</p>
				<br>
				<form action="controllers/delete-user.php" method="POST">
					<button class="remodal-confirm remodal-button" name="delete_button">Yes</button>
					<button type="reset" class="remodal-cancel remodal-button">Cancel</button>
				</form>
			</div>
		</div>

		<script type="text/javascript">

			;(function($) {
				$(function() {

					$('.buttonDelete').bind('click', function(e) {
						e.preventDefault();
						$idTest = $(this).attr('value');
						$('.modal-container').bPopup({
							closeClass: 'remodal-cancel',
							modalClose: true
						});
						$('.remodal-confirm').attr('value', $idTest);
					});

					$('.remodal-confirm').on('click', function() {
						$(this).submit();
					});
				});
			})(jQuery);

		</script>
