				<li class="sub-nav-list"><a href="{{ path }}dashboard.php" class="links-a">All</a></li>
				<li class="sub-nav-list"><a href="{{ path }}dashboard.php?show=Frontend" class="links-a">Frontend</a></li>
				<li class="sub-nav-list"><a href="{{ path }}dashboard.php?show=Backend" class="links-a">Backend</a></li>
			</ul>
		</li>
		</ul>
		{% endif %}
		{% if user_role == 2 %}
		
		<ul>
			<li class="list-editor">
				<a href='{{ path }}users/create-course.php' class="links-a">
					<i class=" iconParent iconPlus"></i> Create Course
